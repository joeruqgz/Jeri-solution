<section class="bg-primary" id="tarifas">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Consultar Tarifa</h2>
                <hr class="light">
                <p class="text-faded"></p>
                
                <%= form_tag("/search", method: "get", :class => 'form-horizontal denser') do %>
                <div class="form-group control-group">
                  <%= label_tag(:q, "Origen:", :class => 'col-sm-2 control-label') %>
                  <div class="col-sm-10 controls">
                      <%= collection_select(:rate, :id, Rate.all, :id, :name_rute, {include_blank: "Elige tu origen y destino"}, {:class => 'form-control'}) %>
                  </div>
                </div>
                
                  <%= submit_tag("Search", {:class => 'btn btn-default btn-xl'}) %>
                <% end %>
                
                <hr class="light">                
                <a href="#" class="btn btn-default btn-xl">Ir al inicio!</a>
                
            </div>
        </div>
    </div>    
</section>