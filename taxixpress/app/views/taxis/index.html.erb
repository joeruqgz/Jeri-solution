<p id="notice"><%= notice %></p>

<h1>Listing Taxis</h1>

<table>
  <thead>
    <tr>
      <th>Id taxi</th>
      <th>Type taxi</th>
      <th>Number seats</th>
      <th>Id driver</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxis.each do |taxi| %>
      <tr>
        <td><%= taxi.id_taxi %></td>
        <td><%= taxi.type_taxi %></td>
        <td><%= taxi.number_seats %></td>
        <td><%= taxi.id_driver %></td>
        <td><%= taxi.status %></td>
        <td><%= link_to 'Show', taxi %></td>
        <td><%= link_to 'Edit', edit_taxi_path(taxi) %></td>
        <td><%= link_to 'Destroy', taxi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

